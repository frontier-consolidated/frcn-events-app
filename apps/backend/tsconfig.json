{
	"compilerOptions": {
		"rootDirs": ["src"],
		"outDir": "dist",
		"lib": ["es2020"],
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"strict": true
	},
	"ts-node": {
		"transpileOnly": true
	}
}
