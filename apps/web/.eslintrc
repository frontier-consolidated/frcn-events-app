{
	"extends": ["plugin:svelte/recommended"],
	"parserOptions": {
		"extraFileExtensions": [".svelte"]
	},
	"ignorePatterns": [
		"tailwind.config.cjs",
		"svelte.config.js",
		"postcss.config.cjs",
		"/build",
		"/.svelte-kit",
		"/package"
	],
	"overrides": [
		{
			"files": ["*.svelte"],
			"parser": "svelte-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser"
			}
		}
	],
	"rules": {
		"import/no-unresolved": [
			"error",
			{
				"ignore": ["^\\$app/.+"]
			}
		],
		"import/order": [
			"warn",
			{
				"pathGroups": [
					{
						"pattern": "$app/**",
						"group": "external"
					},
					{
						"pattern": "$lib/**",
						"group": "sibling"
					}
				]
			}
		],
		"@typescript-eslint/no-explicit-any": "off",
		"svelte/no-at-html-tags": "warn"
	}
}
